from pathlib import Path
import shutil

def delete_folder(folder: str | Path, missing_ok: bool = False) -> None:
    p = Path(folder)
    if not p.exists():
        if missing_ok:
            return
        raise FileNotFoundError(f"Folder not found: {p}")
    if not p.is_dir():
        raise NotADirectoryError(f"Not a folder: {p}")
    shutil.rmtree(p)  # removes the folder and all its contents
