# make project root importable from a notebook inside /Notebooks
try:
    import horizon_api_async as hapi
except ModuleNotFoundError:
    import sys, os
    sys.path.insert(0, os.path.abspath('..'))  # go up from /Notebooks to project root
    import horizon_api_async as hapi

