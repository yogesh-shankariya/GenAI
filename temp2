from pathlib import Path
import data_preprocessing as dp

# Path to the directory containing your JSON files
input_dir = Path("/path/to/your/jsons")  # e.g. Path("Input/74380480")

# Path where the normalised .txt files should be written
output_dir = Path("/path/to/output")     # e.g. Path("normalized_output")

# Convert all JSONs into chunked .txt files (10k token limit per file)
dp.convert_all_jsons_to_txt(input_dir, output_dir, token_limit=10_000)
