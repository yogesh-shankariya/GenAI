class PatientPhoneValidationPayload(BaseModel):
    patient_phone_number_present: str = Field(
        ...,
        description='Must be "Yes" or "No".'
    )
    exact_paragraph_in_medical_record_where_patient_phone_number_is_present: str = Field(
        ...,
        description="The literal text that contains the phone number."
    )
    reason_for_considering_extracted_phone_number_is_of_patient_phone_number: str = Field(
        ...,
        description="Why this phone number is believed to be the patientâ€™s."
    )
    patient_phone_number: str = Field(
        ...,
        description="The extracted phone number."
    )

    model_config = {"extra": "forbid"}
