from pydantic import BaseModel, Field


class EncounterDateSpan(BaseModel):
    """
    Payload containing a single encounterâ€™s start and end dates.
    All dates must be supplied in **mm/dd/yyyy** format.
    """

    encounter_start_date: str = Field(
        ...,
        description="Date should be in mm/dd/yyyy format (e.g. 07/22/2025)"
    )
    encounter_end_date: str = Field(
        ...,
        description="Date should be in mm/dd/yyyy format (e.g. 07/29/2025)"
    )

    model_config = {"extra": "forbid"}  # reject unexpected keys
