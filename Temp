async def sendHttpRequest(
    data="", files="", params="", header="", method="", address="", endpoint="", stream=False
) -> httpx.Response:
    protocol = "https"
    url = f"{protocol}://{address}{endpoint}"

    async with httpx.AsyncClient() as client:
        response = await client.request(
            method=method,
            url=url,
            headers=header,
            data=data,
            files=files,
            params=params,
            follow_redirects=True,
        )

    return response
