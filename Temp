class EncounterServiceFacilityPayload(BaseModel):
    """
    Extracted facility name together with evidence text.
    """

    encounter_service_facility: str = Field(
        ...,
        description="Name of the service facility."
    )
    evidence_for_service_facility: str = Field(
        ...,
        description=(
            "The exact sentence or paragraph in the chart that contains "
            "the facility information."
        )
    )

    model_config = {"extra": "forbid"}
