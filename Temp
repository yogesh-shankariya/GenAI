from pathlib import Path
from typing import List

def list_pdf_names(
    directory: str | Path,
    recursive: bool = True,
    sort_: bool = True
) -> List[str]:
    """
    Return all PDF filenames **without** the '.pdf' extension.

    Parameters
    ----------
    directory : str | Path
        Folder to scan.
    recursive : bool, default True
        • True  → search through all sub‑folders (Path.rglob)  
        • False → onlylook at files directly in `directory` (Path.glob)
    sort_ : bool, default True
        Sort the result alphabetically.

    Returns
    -------
    List[str]
        ["file_A", "another_report", ...]
    """
    directory = Path(directory).expanduser().resolve()
    pattern   = "**/*.pdf" if recursive else "*.pdf"
    stems     = [p.stem for p in directory.glob(pattern)]
    return sorted(stems) if sort_ else stems


# ── examples ─────────────────────────────────────────────────────────
# 1) All PDFs anywhere under Input_Files/HELIX
# names = list_pdf_names("Input_Files/HELIX")

# 2) Only PDFs directly in a folder (no recursion)
# names = list_pdf_names("Input_Files/HELIX/Reauth_01", recursive=False)

