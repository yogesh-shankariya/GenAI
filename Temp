def extract_page_numbers(page_dict: dict) -> list:
    """
    Extract and return sorted list of unique page numbers from keys like 'Page-1', 'Page-67'.

    Parameters
    ----------
    page_dict : dict
        Dictionary where keys are in the format 'Page-<number>'.

    Returns
    -------
    list
        Sorted list of unique page numbers as integers.
    """
    page_numbers = []

    for key in page_dict.keys():
        match = re.search(r'Page-(\d+)', key)
        if match:
            page_numbers.append(int(match.group(1)))

    return sorted(set(page_numbers))
