from pathlib import Path

input_jsons_path = Path("/home/jovyan/AM38605_YOGESH/ncr_aedleks_hossysdocmdsrv_app/scripts/MetadataService/test_input/")

json_files = list(input_jsons_path.glob("*.json"))
txt_files = set(file.stem for file in input_jsons_path.glob("*.txt"))

# Only keep JSON files that do not have a corresponding .txt file
input_files = [file for file in json_files if file.stem not in txt_files]

print(len(input_files))
