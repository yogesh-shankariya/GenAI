from pydantic import BaseModel, Field

class RevisedExtractionInfo(BaseModel):
    Revised_Extraction_Information: str = Field(
        ...,
        description="Rewritten instruction that clearly states what to extract from the PDF section in home-health context."
    )

    model_config = {
        "extra": "forbid"  # disallow any keys other than the one above
    }

# JSON Schema to pass to an LLM if needed
LLM_SCHEMA = RevisedExtractionInfo.model_json_schema()
