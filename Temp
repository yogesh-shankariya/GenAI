from typing import List


class EncounterProvider(BaseModel):
    provider_role: str = Field(
        ...,
        description="Role of the healthcare provider (e.g. Attending Physician)."
    )
    evidence_for_provider_role: str = Field(
        ...,
        description="Sentence / paragraph supporting the role."
    )

    provider_name: str = Field(..., description="Full name of the provider.")
    evidence_for_provider_name: str = Field(
        ..., description="Sentence supporting the provider name."
    )

    provider_speciality: str = Field(..., description="Medical speciality.")
    evidence_for_provider_speciality: str = Field(
        ..., description="Sentence supporting the speciality."
    )

    provider_npi: str = Field(
        ...,
        description="National Provider Identifier (10-digit)."
    )
    evidence_for_provider_npi: str = Field(
        ..., description="Sentence supporting the NPI."
    )

    provider_health_organization: str = Field(
        ...,
        description="Healthcare organization (if present)."
    )
    evidence_for_provider_health_organization: str = Field(
        ...,
        description="Sentence supporting the organization."
    )

    model_config = {"extra": "forbid"}


class EncounterProvidersPayload(BaseModel):
    encounter_providers: List[EncounterProvider] = Field(
        ...,
        description="List of providers associated with the encounter."
    )

    model_config = {"extra": "forbid"}
