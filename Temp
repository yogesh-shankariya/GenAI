    def process_request(
        self,
        session_id: str,
        user_question: str,
        file_path: Optional[str] = None,
    ) -> str:
        """Blocking fa√ßade used by the API layer."""
        return asyncio.run(
            self._process_request_async(
                session_id=session_id,
                user_question=user_question,
                file_path=file_path,
            )
        )
