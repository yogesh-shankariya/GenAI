class PatientAddress(BaseModel):
    address_line_1: str = ""
    address_line_2: str = ""
    address_city:   str = ""
    address_state:  str = ""
    address_postalcode: str = ""

    model_config = {"extra": "forbid"}


class PatientAddressValidationPayload(BaseModel):
    patient_address_present: str = Field(
        ...,
        description='Must be "Yes" or "No".'
    )
    exact_paragraph_in_medical_record_where_patient_address_is_present: str = Field(
        ...,
        description="The literal text that contains the address."
    )
    reason_for_considering_extracted_address_is_of_patient_address: str = Field(
        ...,
        description="Why this address is believed to be the patientâ€™s."
    )
    patient_address: PatientAddress = Field(
        ...,
        description="The extracted address itself."
    )

    model_config = {"extra": "forbid"}
