async def process_csv(question_path, file_path_path):
    row_data      = list(get_requets_rows_generator(question_path, file_path_path))
    json_data_arr = [
        {"file": f, "question": q, "session_id": sid}
        for q, (f, sid) in row_data          # <- your original unpack
    ]

    # <-- NEW: reorder
    json_data_arr = order_rows(json_data_arr)

    responses: list[bool] = []

    # process requests **one by one â€“ fully awaited**
    for row in json_data_arr:
        ok = await call_endpoint(row)     # waits for completion
        responses.append(ok)

    # optional: report success stats
    resp_ok = sum(responses)
    print(f"{resp_ok}/{len(responses)} calls succeeded "
          f"({resp_ok/len(responses):.0%})")
