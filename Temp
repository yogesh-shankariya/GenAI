import re

def strip_markdown_fences(payload: str) -> str:
    """
    Remove leading  ```json  (or any ```<lang>) and the closing ``` fence,
    returning only the raw content.

    Parameters
    ----------
    payload : str
        Text returned by the LLM.

    Returns
    -------
    str
        Clean JSON string with no Markdown code-fence wrappers.
    """
    # matches first ```â€¦ line plus trailing triple back-tick
    fence_pattern = r"^\s*```[\w-]*\s*|\s*```\s*$"
    return re.sub(fence_pattern, "", payload, flags=re.MULTILINE)
