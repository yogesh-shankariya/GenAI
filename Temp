# 1) Is anything listening locally?
import socket
def check(host, port):
    s=socket.socket(); s.settimeout(2)
    try: s.connect((host, port)); print(f"OK: {host}:{port} reachable")
    except Exception as e: print(f"FAIL: {host}:{port} -> {e}")
    finally: s.close()
check("localhost", 6333)

# 2) HTTP probe (works for local)
import requests
try:
    print(requests.get("http://localhost:6333/healthz", timeout=2).text)
except Exception as e:
    print("HTTP check failed:", e)
