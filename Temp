from enum import Enum
from pydantic import BaseModel, Field


class DocClass(str, Enum):
    outpatient_medical_record = "outpatient_medical_record"
    inpatient_medical_record  = "inpatient_medical_record"
    lab_report                = "lab_report"
    exam_report               = "exam_report"
    radiology_report          = "radiology_report"


class DocClassificationPayload(BaseModel):
    """
    Result of classifying an EMR document into a single category.
    """

    doc_classification: DocClass = Field(
        ...,
        description=(
            "One of: "
            "outpatient_medical_record / inpatient_medical_record / "
            "lab_report / exam_report / radiology_report"
        )
    )

    model_config = {"extra": "forbid"}
