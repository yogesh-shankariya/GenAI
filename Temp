from pydantic import BaseModel, Field


class DateOfServicePayload(BaseModel):
    """
    Single-field payload returned by the LLM.

    • **date_of_service_date** – must be provided in **mm/dd/yyyy** format
      (e.g. `07/22/2025`). If the date cannot be found, the model should
      still return an empty string `""`, not any other placeholder.
    """

    date_of_service_date: str = Field(
        ...,
        description="Date of service in mm/dd/yyyy format (e.g. 07/22/2025)."
    )

    model_config = {"extra": "forbid"}  # disallow unexpected keys
