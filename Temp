    async def get_structured_answer(self, answer_text: str) -> dict:
        """
        Asynchronous fa√ßade so that callers can `await`
        without blocking the event-loop.
        """
        loop = asyncio.get_running_loop()
        return await loop.run_in_executor(
            None,                       # default ThreadPoolExecutor
            self._sync_get_structured_answer,
            answer_text,
        )
