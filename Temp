def move_references_inside_data(response: dict) -> dict:
    """
    Moves 'references' inside the 'data' field of the given JSON response.

    Args:
        response (dict): The original JSON response with 'status', 'data', and 'references'.

    Returns:
        dict: Updated response with 'references' moved inside 'data'.
    """
    if 'data' in response and 'references' in response:
        response['data']['references'] = response.pop('references')
    return response
